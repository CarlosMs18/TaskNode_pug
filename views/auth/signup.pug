doctype html
html(lang="en")
    head
        include ../partials/headers
    body.login
        .contenedor-formulario
            h1 Crea tu cuenta en UpTask!

            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
            form#formulario.caja.caja-login(method="POST" action="/auth/signup")
                .campo
                    label(for="email") E-mail: 
                    input(type="text" name="email" placeholder="Escribe tu Email")
                .campo
                    label(for="password") Password:
                    input(type="password" name="password" placeholder="Tu Password" )
                .campo.enviar
                    input.boton(type="submit" value="Crear Cuenta")
